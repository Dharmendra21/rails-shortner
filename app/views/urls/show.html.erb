<div class="container-fluid">
<h1>Short Url</h1>
<p>Shortened Url: <%= @url.short_url %></p>

  <div class="form-inline copy-url-container w-auto" data-controller="clipboard">
    <%= text_field_tag :short_url, @url.short_url, data: {clipboard_target: "source"}, class: 'form-control copy-url-field', disabled: false %>
    <%= button_tag 'Copy', data: {action: "clipboard#copy", clipboard_target: "copied"}, class: 'btn btn-primary copy-url-button mx-3', type: 'button' %>
    <%= button_tag 'Open', data: {action: "clipboard#open"}, class: 'btn btn-outline-secondary visit-url-button', type: 'button' %>
  </div>
<br>
<%= link_to 'Home', root_path, class: "mt-5" %>
</div>
